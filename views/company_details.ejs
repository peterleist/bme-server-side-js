<%- include ('header', {style: 'style'}) -%>
    <nav class="navbar navbar-expand-lg navbar-light bg-light" style="margin-bottom: 1em;">
        <h1 class="navbar-brand" href="#">Cooler manager</h1>
        <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
        </ul>
        <a class="btn btn-dark my-2 my-sm-0" href="/companys">Back</a>
    </nav>
    <div class="container">
        <div class="row">
            <div class="col-md-8 order-md-2 mb-4">
                <h4 class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-muted">Coolers</span>
                    <a type="submit" class="btn btn-secondary" href="/cooler/<%= company._id %>/new">Add cooler</a>
                </h4>
                <div class="list-group">
                    <% coolers.forEach(element => { %>
                        <a href="/cooler/<%= element._id %>" class="list-group-item list-group-item-action flex-column align-items-start">
                            <div class="row">
                                <div class="col-3">
                                    <h5 class="mb-1">
                                        <%= element.name %>
                                    </h5>
                                </div>
                                <div class="col-3">
                                    <p class="mb-1">
                                        <%= element.type %>
                                    </p>
                                </div>
                                <div class="col-3">
                                    <p class="mb-1">
                                        <%= element.status %>
                                    </p>
                                </div>
                                <div class="col-3">
                                    <p class="mb-1">
                                        <%= element.date %>
                                    </p>
                                </div>
                            </div>
                        </a>
                        <% });%>
                </div>
            </div>
            <div class="col-md-4 order-md-1">
                <form method="POST" action="/company/edit/<%= company._id %>">
                    <div class="mb-3">
                        <h4>
                            <input class="form-control border-0 input-lg" type="text" value="<%= company.name %>" id="cp_name" name="cp_name">
                        </h4>
                    </div>
                    <div class="row">
                        <div class="col-4">
                            <h6>Address:</h6>
                        </div>
                        <div class="col-8">
                            <input class="form-control border-0" type="text" value="<%= company.address %>" id="addr" name="addr">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-4">
                            <h6>ZIP code:</h6>
                        </div>
                        <div class="col-8">
                            <input class="form-control border-0" type="text" value="<%= company.zip %>" id="zip" name="zip">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-4">
                            <h6>City:</h6>
                        </div>
                        <div class="col-8">
                            <input class="form-control border-0" type="text" value="<%= company.city %>" id="city" name="city">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-4">
                            <h6>State:</h6>
                        </div>
                        <div class="col-8">
                            <input class="form-control border-0" type="text" value="<%= company.state %>" id="state" name="state">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-4">
                            <h6>Email:</h6>
                        </div>
                        <div class="col-8">
                            <input class="form-control border-0" type="text" value="<%= company.email %>" id="email" name="email">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-4">
                            <h6>Description:</h6>
                        </div>
                        <div class="col-8">
                            <input style="    outline:0px !important;
                        -webkit-appearance:none;
                        box-shadow: none !important;" class="form-control border-0" type="text" value="<%= company.desc %>" id="desc" name="desc">
                        </div>
                    </div>

                    <div class="row mx-auto">
                        <div class="col text-center">
                            <input class="btn btn-secondary btn-lg" type="submit" value="Update" />
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
    <%- include ('footer') -%>